@model IEnumerable<RateAppLogin.Models.Ratings>
@{ ViewBag.Title = "All Ratings";}

<h2>All Ratings</h2>
<a> @Html.ActionLink("Add Rating", "AddRating", "")</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>Rate</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                @if (r.RateID < 2)
                {
                    <td>Excelent</td>
                }
                @if (r.RateID == 2)
                {
                    <td>Moderate</td>
                }
                @if (r.RateID > 2)
                {
                    <td>Needs Improvement</td>
                }
            <td>
                <a>@Html.ActionLink("Show Rating", "getRating", "", new { Id = r.Id }, null)</a>
                
            </td>
            </tr>
        }
    </tbody>
</table>